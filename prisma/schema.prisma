generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id       String    @id @default(uuid())
    username String    @unique
    password String
    name     String
    seller   Seller[]
    comments Comment[]  
}

model Product {
    id          Int       @id @default(autoincrement())
    description String
    comments    Comment[]
}

model Comment {
    timestamp Int @id @default(autoincrement())
    rating    Int

    //option
    comments   String
    user      User?    @relation(fields: [userId], references: [id])
    userId    String?
    product   Product? @relation(fields: [productId], references: [id])
    productId Int?
}

enum SellerCategory {
    Bar
    Brewer
}

enum ProductCategory {
    WhiteSpirit
    Rum
    Gin
}

model Seller {
    id               Int             @unique @default(autoincrement())
    place_name       String
    operating_time   String[]
    description      String
    latitude         Float
    longitude        Float
    address          String
    tel              String
    email            String
    category         SellerCategory
    product_category ProductCategory
    imges            String
    user             User            @relation(fields: [userId], references: [id])
    userId           String
}
